# this files defines which files are included in the (PyPI) package

# python modules to be included are defined in setup.py

# the model files are also included via setup.py, since setuptools has this
# weird behaviour to not correctly install data outside a python module

# always include these files
include README.rst
include LICENSE
include requirements.txt

# include scripts
include bin/*
include bin/tools/*

# never include these files
global-exclude *.pyc
global-exclude .DS_Store
global-exclude .ipynb
global-exclude .git

# do not include the test files
recursive-exclude madmom/test *
